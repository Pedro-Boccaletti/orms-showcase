{
  "name": "blog-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/blog-api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "setup": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npm run db:create",
          "npm run db:run-file ./database/schema.sql",
          "npm run db:run-file ./database/seed.sql"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["prebuild", "build"],
      "options": {
        "buildTarget": "blog-api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "blog-api:build:development"
        },
        "production": {
          "buildTarget": "blog-api:build:production"
        }
      }
    }
  }
}
